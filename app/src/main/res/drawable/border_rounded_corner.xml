<!-- corner_white_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Set the background color to transparent -->
            <corners android:radius="20dp" /> <!-- Set the corner radius to 20dp or your desired value -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Set the background color to transparent -->
            <stroke android:color="@color/white" android:width="1dp" /> <!-- Set the border color to white -->
            <corners android:radius="20dp" /> <!-- Set the corner radius to match the background shape -->
        </shape>
    </item>
</layer-list>
